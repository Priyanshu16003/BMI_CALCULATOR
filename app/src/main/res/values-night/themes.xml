<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BMICALCULATOR" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base</item>
        <item name="colorSecondaryVariant">@color/base</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EtCardViewDesign" >
        <item name="cardBackgroundColor">@color/secondary</item>
        <item name="cardCornerRadius">@dimen/_50sdp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="SpCardViewDesign" >
        <item name="cardBackgroundColor">@color/Primary</item>
        <item name="cardCornerRadius">@dimen/_50sdp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="BmiCardViewDesign" >
        <item name="cardBackgroundColor">@color/Primary</item>
        <item name="cardCornerRadius">@dimen/_24sdp</item>
        <item name="cardElevation">1dp</item>
    </style>
</resources>